<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/md_20"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/md_20"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="-5dp"
                android:layout_marginRight="-5dp"
                android:id="@+id/lblTitle"
                style="@style/CardTitle"
                android:background="#435764"
                android:padding="@dimen/md_10"
                android:layout_alignParentTop="true"
                android:text="@string/lbl_donor_card"
                android:layout_height="wrap_content" />


            <TextView
                style="@style/CardLabel"
                android:layout_below="@+id/lblTitle"
                android:layout_marginTop="@dimen/md_10"
                android:layout_width="wrap_content"
                android:id="@+id/txtFirstName"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/CardLabel"
                android:layout_below="@+id/txtFirstName"
                android:layout_width="wrap_content"
                android:id="@+id/txtLastName"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/CardLabel"
                android:layout_width="wrap_content"
                android:id="@+id/txtEmail"
                android:layout_below="@id/txtLastName"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:background="@color/text_default"
                android:layout_below="@+id/txtEmail"
                android:id="@+id/divider2"
                android:layout_marginBottom="@dimen/md_10"
                android:layout_marginTop="@dimen/md_20"
                android:layout_height="0.5dp" />

            <TextView
                android:id="@+id/lblPoints"
                android:layout_width="wrap_content"
                style="@style/CardLabel"
                android:layout_below="@+id/divider2"
                android:text="@string/lbl_points_2"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/divider2"
                style="@style/CardLabel"
                android:layout_marginLeft="@dimen/md_7"
                android:layout_toRightOf="@+id/lblPoints"
                android:textColor="@color/text_default"
                android:layout_width="wrap_content"
                android:id="@+id/txtPoints"
                android:layout_alignBaseline="@+id/lblPoints"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>