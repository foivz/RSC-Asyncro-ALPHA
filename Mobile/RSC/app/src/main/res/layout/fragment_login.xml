<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="@dimen/md_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etEmail"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                style="@style/EditText"
                android:layout_marginBottom="@dimen/md_10"
                android:hint="@string/lbl_email"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etPassword"
                android:inputType="textWebPassword"
                android:layout_width="match_parent"
                style="@style/EditText"
                android:layout_marginTop="5dp"
                android:hint="@string/lbl_password"
                android:layout_height="wrap_content" />

            <TableRow
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content">

                <com.gc.materialdesign.views.ButtonFlat
                    android:id="@+id/btnPasswordReset"
                    android:layout_width="wrap_content"
                    android:text="@string/lbl_pass_forgot"
                    app:rippleSpeed="100"
                    android:background="@color/secondary"
                    android:textSize="@dimen/td_16"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/md_10"
                    android:layout_height="wrap_content" />

                <com.gc.materialdesign.views.ButtonFlat
                    android:id="@+id/btnLogin"
                    android:layout_marginTop="20dp"
                    android:background="@color/secondary"
                    android:textSize="@dimen/td_16"
                    app:rippleSpeed="100"
                    android:layout_width="wrap_content"
                    android:text="@string/lbl_login"
                    android:layout_height="wrap_content" />
            </TableRow>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btnLoginTwitter"
        android:layout_width="match_parent"
        android:text="@string/lbl_login_twitter"
        app:rippleSpeed="50"
        android:visibility="gone"
        android:layout_height="wrap_content" />
</LinearLayout>