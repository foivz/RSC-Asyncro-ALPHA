<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/md_10"
    android:layout_height="match_parent">


    <TableRow
        android:id="@+id/trLanguage"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"
            android:text="@string/lbl_language_type"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spLanguageType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow
        android:layout_below="@+id/trLanguage"
        android:id="@+id/trNotifications"
        android:layout_marginTop="@dimen/md_20"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:width="150dp"
            android:text="Push notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Off"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/md_7"
            android:layout_height="wrap_content" />

        <com.gc.materialdesign.views.Switch
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/swNotifications" />

        <TextView
            android:text="On"
            android:layout_marginLeft="@dimen/md_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_width="match_parent"
        android:id="@+id/btnSave"
        android:layout_alignParentBottom="true"
        android:text="@string/lbl_save"
        app:rippleSpeed="1000"
        android:layout_height="wrap_content" />

</RelativeLayout>