<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/md_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/td_16"
                android:id="@+id/lblDonationDate"
                android:text="@string/lbl_donated"
                android:layout_marginRight="@dimen/md_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/td_16"
                android:id="@+id/txtDonationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_marginTop="@dimen/md_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/lbl_mills"
                android:textSize="@dimen/td_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/td_16"
                android:id="@+id/txtDonationQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
    </LinearLayout>
</android.support.v7.widget.CardView>