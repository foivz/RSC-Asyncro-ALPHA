<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgInstitutionPicture"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <ImageView
            android:id="@+id/imgInstitutionLogo"
            android:layout_alignBottom="@+id/imgInstitutionPicture"
            android:layout_marginBottom="-50dp"
            android:layout_width="70dp"
            android:background="@color/disabled"
            android:layout_marginRight="@dimen/md_10"
            android:layout_alignParentRight="true"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/txtInstitutionLabel"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/imgInstitutionLogo"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/td_18"
            android:textColor="@color/text_lighter"
            android:layout_marginTop="@dimen/md_10"
            android:layout_below="@+id/imgInstitutionPicture"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>